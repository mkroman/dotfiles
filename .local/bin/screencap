#!/usr/bin/env bash
#
# This script will let you capture screenshots regardless of your display
# server by relying on third-party tools to select a region and save a
# screenshot, and then it uploads it to s3.
#
# For wayland you will need the tools `grim`, `wl-copy` and `slurp`
# For X11 you will need the tools `maim`, xsel` and `slop`
#
# In addition to these you need to install aws-cli, libnotify (or set OSD=false) and 

# User configuration
OSD=true # Notify when the screenshot has been uploaded (requires imagemagick and libnotify)
# The S3 website prefix
s3_website_url="https://rwx.s3-website.nl-ams.scw.cloud/"
# The s3 bucket prefix for uploading
s3_bucket_prefix="s3://rwx/"
# The command or path to run aws-cli
aws_cli="aws"
# Optional arguments to the aws_cli command
aws_cli_args="--profile scaleway --endpoint-url https://s3.nl-ams.scw.cloud"
# The output filename
name="$(date +%s).png"

save() {
  case "$1" in
    selection)
      if [ "${XDG_SESSION_TYPE}" == "wayland" ]; then
        local region="$(swaymsg -t get_tree | jq -r '.. | select(.pid? and .visible?) | .rect | "\(.x),\(.y) \(.width)x\(.height)"' | slurp)"
        grim -g "${region}" "/tmp/${name}"
      else
        maim -b 1 -u -s "/tmp/${name}" 2> /dev/null
      fi
      ;;
    desktop)
      if [ "${XDG_SESSION_TYPE}" == "wayland" ]; then
        grim "/tmp/${name}"
      else
        maim "/tmp/${name}" 2> /dev/null
      fi
      ;;
    window)
      if [ "${XDG_SESSION_TYPE}" == "wayland" ]; then
        grim "/tmp/${name}"
      else
        maim -i "$(xdotool getactivewindow)" -b 1 "/tmp/${name}" 2> /dev/null
      fi
      ;;
    *)
      echo "Usage: ${0} <selection|desktop|window>"
      exit 1
      ;;
  esac

  if [ ! -f "/tmp/${name}" ]; then
    echo "Screenshot was not taken. Aborting."
    exit 1
  fi
}

upload() {
  echo "Uploading ${name}."
  
  if [ $OSD ]; then # generate thumbnail (requires imagemagick)
    convert -thumbnail 120x240 "/tmp/${name}" "/tmp/t${name}"
  fi

  ext_name="$(date +%Y/%m)/${name}"
  output=$()

  if output=$(mkpub "/tmp/${name}" 2>&1); then
    url="${output}"
  else
    notify-send \
      --urgency=critical \
      --category=transfer.error \
      "Screenshot" \
      "Could not upload file to s3:\r\n${output}"
  fi

  if [[ $url == http* ]]; then
    if [ "${XDG_SESSION_TYPE}" == "wayland" ]; then
      echo "${url}" | tr -d '\n' | wl-copy
    else
      echo "${url}" | tr -d '\n' | xsel -ibp
    fi
    echo "Upload complete - ${url}"
    
    if [ $OSD ]; then
      notify-send \
        -i "/tmp/t${name}" \
        --category=transfer.complete \
        "Screenshot" \
        "The screenshot has been uploaded."
    fi
  else
    echo "${url}"
    exit 1
  fi
}

delete() {
  rm "/tmp/${name}"

  if [ $OSD ]; then
    rm "/tmp/t${name}"
  fi
}

save "${1}"
upload
delete
